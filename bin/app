#!/bin/bash
source "$(cd $(dirname $0);pwd -P)/env"
echo $APP_HOSTSYSTEM
hasSymlinks=$(file -h $0 | grep -ic "symbolic link to")
if [[ $hasSymlinks -gt 0 ]]; then
    COMMAND=$(basename $0)
else
    COMMAND="node"
fi
case $COMMAND in
    "node" )
        app_check_node_setup
        node $APP_LIBPATH "$@"
        exit $?
    ;;
    "npm" )
        app_check_node_setup
        $APP_NPM_BINPATH/npm "$@"
        exit $?
    ;;
    "nvm" )
        $APP_NVM_BINPATH/nvm "$@"
        exit $?
    ;;
esac
