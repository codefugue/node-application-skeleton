#!/bin/bash

set -x

APP_HOME="$(cd $(dirname $(cd $(dirname $0);pwd));pwd)"
cd $APP_HOME;

APP_BIN="$APP_HOME/bin"
APP_PLATFORM="$(uname -s)"
APP_PATH="$APP_BIN"
APP_ENV="development"

ENV="/usr/bin/env -i HOME=$HOME USER=$USER UID=$UID GROUPS=$GROUPS HOSTNAME=$HOSTNAME PATH=$APP_PATH APP_HOME=$APP_HOME NODE_ENV=$APP_ENV"


## Create symlinks from ./bin/ to the correct binaries of your app
if [[ -d "$APP_BIN" && -r "$APP_BIN" ]]; then
	cd $APP_BIN;
	APP_BINDIRNAME="${APP_PLATFORM}-${HOSTTYPE}"
	if [[ -d "${APP_BIN}/${APP_BINDIRNAME}"  && -r "${APP_BIN}/${APP_BINDIRNAME}" ]];then
		ln -sf $APP_BINDIRNAME/* ./;
		cd $APP_HOME
	fi
fi;





